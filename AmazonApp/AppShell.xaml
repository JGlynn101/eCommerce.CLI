<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AmazonApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AmazonApp"
    xmlns:views="clr-namespace:AmazonApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AmazonApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryManagementView}"
        Route="Inventory" />
    
    <ShellContent
        Title="ShoppingCart"
        ContentTemplate="{DataTemplate views:ShoppingCartManagementView}"
        Route="ShoppingCart" />

</Shell>
