<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AmazonApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AmazonApp"
    xmlns:views="clr-namespace:AmazonApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AmazonApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="InventoryManagement"
        ContentTemplate="{DataTemplate views:InventoryManagementView}"
        Route="InventoryManagement" />

    <ShellContent
        Title="ShoppingCart"
        ContentTemplate="{DataTemplate views:ShoppingCartManagementView}"
        Route="ShoppingCart" />

    <ShellContent
        Title="Item"
        ContentTemplate="{DataTemplate views:ItemView}"
        Route="Item" />

    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShoppingCartView}"
        Route="Shop" />

    <ShellContent
        Title="Tax View"
        ContentTemplate="{DataTemplate views:TaxView}"
        Route="TaxView" />
    
    <ShellContent
        Title="Checkout View"
        ContentTemplate="{DataTemplate views:CheckoutView}"
        Route="CheckoutView" />

</Shell>
