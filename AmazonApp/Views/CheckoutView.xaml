<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AmazonApp.Views.CheckoutView"
             Title="CheckoutView"
             x:Name="CheckoutPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Padding="20">
            <Label Text="Confirm Checkout" FontAttributes="Bold" />
            <Button Text="Complete Checkout" Command="{Binding CompleteCheckoutCommand}" />
        </StackLayout>
        <Button Grid.Row="1"
                Text="Go Back"
                Clicked="BackClicked" />
    </Grid>
</ContentPage>
